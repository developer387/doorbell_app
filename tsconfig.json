{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/shared/*"
      ],
      "@components/*": [
        "src/shared/components/*"
      ],
      "@config/*": [
        "src/shared/config/*"
      ],
      "@constants/*": [
        "src/shared/constants/*"
      ],
      "@context/*": [
        "src/shared/context/*"
      ],
      "@hooks/*": [
        "src/shared/hooks/*"
      ],
      "@services/*": [
        "src/shared/services/*"
      ],
      "@styles/*": [
        "src/shared/styles/*"
      ],
      "@types/*": [
        "src/shared/types/*"
      ],
      "@typography/*": [
        "src/shared/typography/*"
      ],
      "@utils/*": [
        "src/shared/utils/*"
      ],
      "@screens/*": [
        "src/mobile/screens/*"
      ],
      "@screens": [
        "src/mobile/screens"
      ],
      "@navigation/*": [
        "src/mobile/navigation/*"
      ],
      "@navigation": [
        "src/mobile/navigation"
      ],
      "@navigation-types": [
        "src/mobile/navigation-types"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}